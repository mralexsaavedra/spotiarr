{
  "name": "backend",
  "version": "0.0.0",
  "description": "SpotiArr Backend",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm prisma:generate && tsc",
    "start": "node dist/index.js",
    "lint": "spotiarr-lint src --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "@spotiarr/shared": "workspace:*",
    "bullmq": "^5.65.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "node-id3": "^0.2.9",
    "ytdlp-nodejs": "^2.3.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@spotiarr/eslint-config": "workspace:*",
    "@spotiarr/prettier-config": "workspace:*",
    "@spotiarr/tsconfig": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "prisma": "6.19.0",
    "tsx": "^4.7.0"
  }
}
